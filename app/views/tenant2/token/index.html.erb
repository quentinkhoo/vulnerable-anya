<div class="container">
  <h1>Get your Token</h1>
  <%= form_with url: tenant1_token_path, method: :post, format: :json, data: { turbo: false } do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Retrieve Token', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>